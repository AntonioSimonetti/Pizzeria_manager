@{
    ViewData["Title"] = "Totino, vera pizza Napoletana";
    Layout = "_LayoutCustom";

    List<Pizza> pizze = new();
    Pizza margherita = new Pizza("Margherita", "Pomodoro, Mozzarella, Basilico", "~/img/PizzaMargherita.jpg", 5.5f);
    Pizza italiana = new Pizza("Italiana", "Ruocola, Scaglie di parmiggiano, pomodorini e crudo", "~/img/PizzaRucola.jpg", 7.5f);
    Pizza croccopizza = new Pizza("Croccopizza", "Crocche e mozzarella, cotto e panna", "~/img/PizzaCroccoPizza.jpg", 8f);
    Pizza salsiccia = new Pizza("Salsiccia e Patatine", "Salsiccia, patatine fritte, mozzarella", "~/img/PizzaSalsiccia.jpg", 8.5f);
    Pizza friarelli = new Pizza("Salsiccia e friarielli", "Salsiccia, friarielli, mozzarella", "~/img/PizzaFriarielli.jpg", 7f);


    pizze.Add(margherita);
    pizze.Add(italiana);
    pizze.Add(croccopizza);
    pizze.Add(salsiccia);
    pizze.Add(friarelli);
}
    <!DOCTYPE html>
    <html lang="en">

        <head>
            <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
            <title>@ViewData["Title"]</title>
        </head>
        <body>
        <div class="container mt-4 mb-4 container-custom">
            <div class="row align-items-start">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">Nome</th>
                            <th scope="col">Descrizione</th>
                            <th scope="col">Prezzo</th>
                            <th scope="col">Immagine</th>
                        </tr>
                    </thead>
                    <tbody>
                @foreach(var pizza in pizze){
                    <tr>
                        <td>@pizza.Nome</td>
                        <td>@pizza.Descrizione</td>
                        <td>@pizza.Prezzo €</td>
                        <td><img src="@Url.Content(pizza.FotoUrl)" class="img-thumbnail w-25" alt="@pizza.Nome"></td>
                    </tr>
                }
                    </tbody>
                </table>

            </div>
        </div>
 
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        </body>
        </html>
        <style>
            body {
                background-color: #eae2b7;
                border: 2px solid black;
                height: 100vh;
            }

            .navbar {
                background-color: #fcbf49;
                color: #d62828;
            }

            .container-custom {
                background-color: #fcbf49;
                padding: 30px; 
                border-radius: 8px; 
            }

            .table-bordered th,
            .table-bordered td {
                border: 2px solid black; 
            }
        </style>