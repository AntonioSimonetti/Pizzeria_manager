 @model Pizza
@{
    Layout = "_LayoutCustom";
}

 <div class="container">
    <form asp-controller="Pizza" asp-action="Create" method="post">
        @Html.AntiForgeryToken()
     <div class="mb-3">
         <strong>Nome:</strong>
         <input asp-for="Nome" class="d-block w-100" />
         <span asp-validation-for="Nome" class="text-danger"></span>

     </div>

     <div class="mb-3">
         <strong>Descrizione:</strong>
         <input asp-for="Descrizione" class="d-block w-100" />
         <span asp-validation-for="Descrizione" class="text-danger"></span>

     </div>

     <div class="mb-3">
          <strong>Prezzo:</strong>
          <input asp-for="Prezzo" class="d-block w-100" />
          <span asp-validation-for="Prezzo" class="text-danger"></span>

     </div> 

     <div class="mb-3">
         <strong>Foto:</strong>
         <input asp-for="FotoUrl" class="d-block w-100" />
         <span asp-validation-for="FotoUrl" class="text-danger"></span>

     </div>
     
     <div class="text-end">
         <input type="submit" class="btn btn-small btn-info" value="Aggiungi">
     </div>

    </form>

   <a href="@Url.Action("Index", "Pizza")">Back</a>

 </div> 