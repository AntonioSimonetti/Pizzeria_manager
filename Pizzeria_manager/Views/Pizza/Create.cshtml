 @model PizzaFormModel
@{
    Layout = "_LayoutCustom";
}

 <div class="container">
    <form asp-controller="Pizza" asp-action="Create" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
     <div class="mb-3">
         <strong>Nome:</strong>
         <input asp-for="Pizza.Nome" class="d-block w-100" />
         <span asp-validation-for="Pizza.Nome" class="text-danger"></span>

     </div>

     <div class="mb-3">
         <strong>Descrizione:</strong>
         <input asp-for="Pizza.Descrizione" class="d-block w-100" />
         <span asp-validation-for="Pizza.Descrizione" class="text-danger"></span>

     </div>

     <div class="mb-3">
          <strong>Prezzo:</strong>
          <input asp-for="Pizza.Prezzo" class="d-block w-100" />
          <span asp-validation-for="Pizza.Prezzo" class="text-danger"></span>

     </div> 
 
     <div class="mb-3">
         <strong>Categoria:</strong>
         <select asp-for="Pizza.CategoryId" rows="10" class="d-block w-100">
             <option value=""></option>
                @foreach (Category category in Model.Categories)
                {
                    @if(Model.Pizza.CategoryId == category.Id)
                    {
                        <option value="@category.Id" selected>@category.Title</option>
                    }
                    else
                    {
                        <option value="@category.Id">@category.Title</option>
                    }
                }
         </select>
     </div>

     <div class="form-field">
         <img src="@Model.Pizza.ImgSrc" />
         <label asp-for?="ImageFromFile">Image file</label>
         <input type="file" asp-for="ImageFormFile" />
     </div>

     <div class="mb-3">
         <strong>Ingredienti:</strong>
            <select asp-for="SelectedIngredienti"
                 multiple="multiple"
                 size="10"
                 class="form-control mb-2 mr-sm-2 ml-sm-3 leftList"
                 asp-items="@Model.Ingredienti">
         </select>
     </div>
     
     <div class="text-end">
         <input type="submit" class="btn btn-small btn-info" value="Aggiungi">
     </div>

    </form>

   <a href="@Url.Action("Index", "Pizza")">Back</a>

 </div> 