@model Pizza;
@{
   Layout = null;
  }


<div class="main-div">
    <div class="first-div">
        <h1>Nome</h1>
        <h4>@Model.Nome</h4>
        <h1>Descrizione</h1>
        <h4>@Model.Descrizione</h4>
        <h1>Costo</h1>
        <h4>@Model.Prezzo €</h4>
        <h1>Categoria:</h1>
        <h4>@($"{Model.GetDisplayedCategory()}")</h4>
        <h1>Ingredienti:</h1>
        <div style="display: flex; flex-wrap: wrap; gap: 5px;">
            @foreach (var ingredienti in Model.Ingredienti)
            {
                <div style="background-color:azure; display:flex; justify-content: center; align-items: center; border-radius:3px; border-style: solid; border-color:black; padding:2px;">
                    @ingredienti.Name
                </div>

            }
        </div>
        <a href="@Url.Action("Index", "Pizza")">Back</a>

     


    </div>
    <div class="second-div">
        <img src="@Url.Content(@Model.FotoUrl)"  alt="@Model.Nome">
    </div>
</div>


<style>

    .main-div {
        border: 2px solid black;
        width: 100%;
        height: auto;
        display:flex;
        justify-content:center;
    }

    .first-div {
        width: 50%;
        padding: 2rem;
        height: auto;
        display:flex;
        justify-content: flex-start;
        flex-direction: column;

    }

    .second-div {
        width: 50%;
        height: auto;
        display: flex;
        justify-content: center;
        align-items: flex-start;
        padding: 2rem;
    }
</style>